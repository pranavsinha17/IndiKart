<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatagoryActivity">
    <TextView
        android:id="@+id/addpro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:textStyle="bold"
        android:textSize="60dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addpro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:scrollbars="horizontal">

        <ImageView
            android:id="@+id/shirt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/tshirts" />

        <ImageView
            android:id="@+id/shoe"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/shoess" />

        <ImageView
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/female_dresses" />

        <ImageView
            android:id="@+id/books"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/books" />

        <ImageView
            android:id="@+id/purse"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/purses_bags" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:scrollbars="horizontal">

        <ImageView
            android:id="@+id/sweater"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/sweather" />

        <ImageView
            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/sports" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/laptops" />

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/mobiles" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:scrollbars="horizontal">

        <ImageView
            android:id="@+id/watches"
            android:layout_width="112dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/watches" />

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="78dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/headphoness" />

        <ImageView
            android:id="@+id/hats"
            android:layout_width="121dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/hats" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/select_product_image" />
    </LinearLayout>


</RelativeLayout>